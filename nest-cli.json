{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "defaultProject": "auth-service",
  "sourceRoot": ".",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "monorepo": true,
  "root": ".",
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "auth-service": {
      "type": "application",
      "root": "apps/auth-service",
      "entryFile": "main",
      "sourceRoot": "apps/auth-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-service/tsconfig.app.json"
      }
    },
    "config": {
      "type": "library",
      "root": "libs/config",
      "entryFile": "index",
      "sourceRoot": "libs/config/src",
      "compilerOptions": {
        "tsConfigPath": "libs/config/tsconfig.lib.json"
      }
    },
    "driver-service": {
      "type": "application",
      "root": "apps/driver-service",
      "entryFile": "main",
      "sourceRoot": "apps/driver-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/driver-service/tsconfig.app.json"
      }
    },
    "redis": {
      "type": "library",
      "root": "libs/redis",
      "entryFile": "index",
      "sourceRoot": "libs/redis/src",
      "compilerOptions": {
        "tsConfigPath": "libs/redis/tsconfig.lib.json"
      }
    },
    "trip-service": {
      "type": "application",
      "root": "apps/trip-service",
      "entryFile": "main",
      "sourceRoot": "apps/trip-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/trip-service/tsconfig.app.json"
      }
    },
    "rider-service": {
      "type": "application",
      "root": "apps/rider-service",
      "entryFile": "main",
      "sourceRoot": "apps/rider-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/rider-service/tsconfig.app.json"
      }
    }
  }
}